{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://schema.spaceoperator.com/command-server-config.schema.json",
    "title": "FlowServerConfig",
    "type": "object",
    "properties": {
        "apikey": {
            "type": [
                "string",
                "null"
            ]
        }
    },
    "anyOf": [
        {
            "type": "object",
            "properties": {
                "url": {
                    "type": "string",
                    "format": "uri"
                }
            },
            "required": [
                "url"
            ]
        },
        {
            "$ref": "#/$defs/FlowServerAddress"
        }
    ],
    "$defs": {
        "FlowServerAddress": {
            "type": "object",
            "properties": {
                "node_id": {
                    "type": "string"
                },
                "relay_url": {
                    "type": "string",
                    "format": "uri"
                },
                "direct_addresses": {
                    "type": [
                        "array",
                        "null"
                    ],
                    "uniqueItems": true,
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "node_id",
                "relay_url"
            ]
        }
    }
}