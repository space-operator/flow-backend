{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://schema.spaceoperator.com/node-v2.schema.json",
    "title": "Node Definition V2",
    "description": "Canonical V2 node definition contract",
    "type": "object",
    "required": [
        "version",
        "name",
        "type",
        "author_handle",
        "source_code",
        "ports",
        "config_schema",
        "config"
    ],
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string",
            "description": "JSON Schema URI for editor validation."
        },
        "version": {
            "type": "string"
        },
        "description": {
            "type": "string",
            "description": "Human-readable summary of what this node does."
        },
        "name": {
            "type": "string",
            "pattern": "^[a-zA-Z][a-zA-Z0-9_-]*$"
        },
        "type": {
            "type": "string",
            "enum": [
                "native",
                "wasm",
                "deno",
                "mock"
            ]
        },
        "author_handle": {
            "type": "string",
            "pattern": "^[a-zA-Z][a-zA-Z0-9_-]*$"
        },
        "source_code": {
            "type": "string",
            "description": "Path or URL pointing to the command source implementation."
        },
        "ports": {
            "$ref": "#/definitions/node_ports"
        },
        "config_schema": {
            "type": "object",
            "additionalProperties": true
        },
        "config": {
            "type": "object",
            "additionalProperties": true
        }
    },
    "definitions": {
        "value_type": {
            "enum": [
                "bool",
                "u8",
                "u16",
                "u32",
                "u64",
                "u128",
                "i8",
                "i16",
                "i32",
                "i64",
                "i128",
                "f32",
                "f64",
                "decimal",
                "number",
                "pubkey",
                "keypair",
                "signature",
                "address",
                "string",
                "json",
                "bytes",
                "array",
                "object",
                "free"
            ]
        },
        "input_port": {
            "type": "object",
            "required": [
                "name"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "type_bounds": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/value_type"
                    },
                    "default": []
                },
                "required": {
                    "type": "boolean",
                    "default": false
                },
                "passthrough": {
                    "type": "boolean",
                    "default": false
                },
                "tooltip": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "output_port": {
            "type": "object",
            "required": [
                "name",
                "type"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "type": {
                    "$ref": "#/definitions/value_type"
                },
                "optional": {
                    "type": "boolean",
                    "default": false
                },
                "tooltip": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "node_ports": {
            "type": "object",
            "required": [
                "inputs",
                "outputs"
            ],
            "properties": {
                "inputs": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/input_port"
                    }
                },
                "outputs": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/output_port"
                    }
                }
            },
            "additionalProperties": false
        }
    }
}
