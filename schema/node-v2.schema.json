{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://schema.spaceoperator.com/node-v2.schema.json",
    "title": "Node Definition V2",
    "description": "Canonical V2 node definition contract",
    "type": "object",
    "required": [
        "id",
        "version",
        "name",
        "type",
        "ports",
        "config_schema",
        "config",
        "author_handle",
        "is_published",
        "is_admin_only",
        "legacy_node_id",
        "migration_status",
        "user_id",
        "created_at",
        "updated_at"
    ],
    "additionalProperties": false,
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "version": {
            "type": "string"
        },
        "name": {
            "type": "string",
            "pattern": "^[a-zA-Z][a-zA-Z0-9_-]*$"
        },
        "type": {
            "type": "string",
            "enum": [
                "native",
                "wasm",
                "deno",
                "mock"
            ]
        },
        "ports": {
            "$ref": "#/definitions/node_ports"
        },
        "config_schema": {
            "type": "object",
            "additionalProperties": true
        },
        "config": {
            "type": "object",
            "additionalProperties": true
        },
        "author_handle": {
            "type": [
                "string",
                "null"
            ]
        },
        "is_published": {
            "type": "boolean"
        },
        "is_admin_only": {
            "type": "boolean"
        },
        "legacy_node_id": {
            "type": [
                "integer",
                "null"
            ]
        },
        "migration_status": {
            "type": "string",
            "enum": [
                "pending",
                "tested",
                "published"
            ]
        },
        "user_id": {
            "type": [
                "string",
                "null"
            ],
            "format": "uuid"
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "updated_at": {
            "type": "string",
            "format": "date-time"
        }
    },
    "definitions": {
        "value_type": {
            "enum": [
                "bool",
                "u8",
                "u16",
                "u32",
                "u64",
                "u128",
                "i8",
                "i16",
                "i32",
                "i64",
                "i128",
                "f32",
                "f64",
                "decimal",
                "pubkey",
                "keypair",
                "signature",
                "address",
                "string",
                "bytes",
                "array",
                "object",
                "free"
            ]
        },
        "input_port": {
            "type": "object",
            "required": [
                "id",
                "name"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "format": "uuid"
                },
                "name": {
                    "type": "string"
                },
                "type_bounds": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/value_type"
                    },
                    "default": []
                },
                "required": {
                    "type": "boolean",
                    "default": false
                },
                "passthrough": {
                    "type": "boolean",
                    "default": false
                },
                "tooltip": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "output_port": {
            "type": "object",
            "required": [
                "id",
                "name",
                "type"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "format": "uuid"
                },
                "name": {
                    "type": "string"
                },
                "type": {
                    "$ref": "#/definitions/value_type"
                },
                "optional": {
                    "type": "boolean",
                    "default": false
                },
                "tooltip": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "node_ports": {
            "type": "object",
            "required": [
                "inputs",
                "outputs"
            ],
            "properties": {
                "inputs": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/input_port"
                    }
                },
                "outputs": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/output_port"
                    }
                }
            },
            "additionalProperties": false
        }
    }
}
